<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        tools:context="io.github.gauthamcity12.careergo.AddNewActivity">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editName"
            android:autoText="false"
            android:hint="What&apos;s the company&apos;s name?"
            android:layout_below="@+id/InfoTitle"
            android:layout_alignParentStart="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add Info"
            android:id="@+id/InfoTitle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textColor="#ff000000" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPos"
            android:layout_below="@+id/editName"
            android:layout_alignParentStart="true"
            android:layout_marginTop="79dp"
            android:hint="Position Name?" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editPos2"
            android:hint="(Optional) Position 2?"
            android:layout_below="@+id/editPos"
            android:layout_alignParentStart="true" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/editDesc"
            android:layout_below="@+id/editPos2"
            android:layout_alignEnd="@+id/editPos2"
            android:layout_marginTop="91dp"
            android:hint="Additional Information?" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit!"
            android:id="@+id/button"
            android:onClick="getValues"
            android:enabled="true"
            android:background="#ff2b57ff"
            android:textColor="#ffffffff"
            android:layout_below="@+id/editDesc"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>
